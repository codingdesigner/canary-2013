&lt;section class=&quot;media-contact&quot;&gt;
  &lt;h3&gt;Media Contact&lt;/h3&gt;
  &lt;article role=&quot;article&quot; class=&quot;profile&quot;&gt;
    &lt;div class=&quot;field-full-name&quot;&gt;{{ name.first }} {{ name.last }}&lt;/div&gt;
    &lt;div class=&quot;field-user-title&quot;&gt;{{ name.title }}&lt;/div&gt;
    &lt;div class=&quot;phone&quot;&gt;
      &lt;span class=&quot;field-label&quot;&gt;Phone:&lt;/span&gt;
      &lt;div class=&quot;field-phone inline&quot;&gt;{{ phone }}&lt;/div&gt;
    &lt;/div&gt;
    &lt;div class=&quot;email&quot;&gt;
      &lt;span class=&quot;field-label&quot;&gt;Email:&lt;/span&gt;
      &lt;div class=&quot;field-email inline&quot;&gt;&lt;a href=&quot;{{ url }}&quot;&gt;Contact Form&lt;/a&gt;&lt;/div&gt;
    &lt;/div&gt;
    &lt;hr&gt;&lt;/article&gt;
&lt;/section&gt;
